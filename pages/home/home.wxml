<!-- pages/home/home.wxml -->
<view class="UCenter-bg">
  <view class="padding" wx:if="{{isLogin}}">  
    <view class="cu-avatar lg round margin-top" style="background-image:url(https://ossweb-img.qq.com/images/lol/web201310/skin/big10001.jpg);"></view>
    <view class="text-bold margin-top-sm">用户名：{{userName}}</view>
    <view class="text-bold margin-top-sm">ID：{{userID}}</view>
    <view class="text-bold margin-top-sm">工种：{{userType}}</view>
    <button class="cu-btn round bg-gray margin-top" style="z-index: 1000;" bind:tap="quit">注销</button>
  </view>
  <view wx:else class="padding">
    <view class="cu-avatar lg round margin-top-xl">
      <text class="cuIcon-people"></text>
    </view>
    <view class="text-bold margin-top-lg">尚未登陆请先登陆</view>
    <button class="cu-btn round bg-green margin-top" style="z-index: 1000;" bind:tap="login">登陆</button>
  </view>
  <image src="https://image.weilanwl.com/gif/wave.gif" mode="scaleToFill" class="gif-wave"></image>
</view>
<view class="cu-modal {{showLogin?'show':''}}" wx:if="{{showLogin}}">
  <view class="cu-dialog">
    <view>
      <view class="cu-bar bg-white justify-end">
        <view class="content">员工登陆</view>
        <view class="action" bindtap="hideLogin">
          <text class="cuIcon-close text-red"></text>
        </view>
      </view>
      <form bind:submit="formSubmit_lo">
        <view class="text-sm padding-sm" wx:if="{{show_error}}">
          <text class="text-red text-shadow">{{error_message}}</text>
        </view>
        <view class="cu-form-group solid-bottom" style="text-align: left;">
          <input placeholder="账号" name="id" />
        </view>
        <i-row>
          <i-col span="24">
            <view class="cu-form-group solids-bottom " style="text-align: left;">
              <input placeholder="密码" name="password" password="{{is_password}}" />
              <i-icon type="{{eye_status}}" size="24" bind:tap="changeStatus" />
            </view>
          </i-col>
        </i-row>
        <view class="padding flex flex-direction">
          <button class="cu-btn bg-blue lg animation-{{animation=='shake'?'shake':''}}" formType="submit">
            登陆
          </button>
        </view>
      </form>
    </view>
  </view>
</view>
<swiper class="card-swiper square-dot" indicator-dots="true" circular="true" autoplay="false" bindchange="cardSwiper" indicator-color="#8799a3" indicator-active-color="#0081ff">
  <swiper-item wx:for="{{swiperList}}" wx:key class="{{cardCur==index?'cur':''}}">
    <view class="swiper-item">
      <view class="bg-white" style="width: 500rpx; height: 400rpx;">aaa</view>
    </view>
  </swiper-item>
</swiper>
<i-tab-bar current="{{ current }}" bindchange="handleChange" fixed="true">
  <i-tab-bar-item key="homepage" icon="homepage" current-icon="homepage_fill" title="主页"></i-tab-bar-item>
  <i-tab-bar-item key="brush" icon="brush" current-icon="brush_fill" title="新建报单"></i-tab-bar-item>
</i-tab-bar>